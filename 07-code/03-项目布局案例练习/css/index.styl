$fontColor= #02a774
@import './reset.css'
@import './mixins.styl'
  html,body
    width 100%
    height 100%
    overflow hidden
    .app
      width 100%
      height 100%
      .footer
        width 100%
        height 50px
        position fixed
        left 0
        bottom 0
        display flex
        .footItem
          display flex
          flex 1
          flex-direction column
          justify-content center
          align-items center
          &.active
            color $fontColor
          .iconfont
            font-size 20px
          .itemText
            margin-top 3px


      